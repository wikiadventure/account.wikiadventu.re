---
import NodeInputHidden from "./input/NodeInputHidden.astro";
import NodeInputSubmit from "./input/NodeInputSubmit.astro";
import NodeInputDefault from "./input/NodeInputDefault.astro";
import type { UiNode, UiNodeInputAttributes } from "@ory/client-fetch";

interface Props {
  node: UiNode & { attributes: UiNodeInputAttributes }
}
const { node } = Astro.props;
const { type } = node.attributes;

---
{
  type == "hidden" ? <NodeInputHidden node={node}/>   :
  type == "submit" ? <NodeInputSubmit node={node}/>   :
                    <NodeInputDefault node={node}/>
}