---
import type { RecoveryFlow } from "@ory/client-fetch";
import OryForm from "../components/ory/OryForm.astro";
import OryLayout from "../layout/OryLayout.astro";
import { getUrlForFlow, ory } from "../ory/api";

const url = new URL(Astro.request.url);

const {
    flow,
} = Object.fromEntries(url.searchParams);

const cookie = Astro.request.headers.get('cookie')!;

var recoverFlow:RecoveryFlow | null = null;
if (flow) {
    recoverFlow = await ory.getRecoveryFlow({ id: flow, cookie }).catch(()=>null);
}
if (!recoverFlow) return Astro.redirect(getUrlForFlow("recovery", url.searchParams));

---
<OryLayout title="Wiki Adventure account" meta={{title: "Wiki Adventure account", description: "Create and manage your Wiki Adventure account."}}>
    <section recover-section>
        <h1>Wiki Adventure account</h1>
        <h2>Recover</h2>
        <OryForm flow={recoverFlow}/>
    </section>
</OryLayout>
